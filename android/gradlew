#!/bin/bash

# Gradle wrapper script for StoryTime Android app

# Check if JAVA_HOME is set
if [ -z "$JAVA_HOME" ]; then
    echo "Error: JAVA_HOME is not set. Please install Java and set JAVA_HOME."
    exit 1
fi

# Set Android SDK path
export ANDROID_HOME=${ANDROID_HOME:-$HOME/Android/Sdk}

# Navigate to android directory
cd "$(dirname "$0")"

# Run gradle
exec ./gradlew "$@"
